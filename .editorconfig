# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = tab
tab_width = 8

[**.php]
indent_style = space
indent_size = 4

[**.json]
indent_style = space
indent_size = 4

[**.yml]
indent_style = space
indent_size = 2

[**.yaml]
indent_style = space
indent_size = 2
